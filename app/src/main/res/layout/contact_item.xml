<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewContact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:backgroundTint="#E0E0E0"
    tools:context=".MainActivity"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Contact Name (First + Last Name) -->
        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- State Code -->
        <TextView
            android:id="@+id/contactStateCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#757575"
            android:visibility="visible" /> <!-- Changed visibility to visible -->

        <!-- Contact Phone Numbers -->
        <TextView
            android:id="@+id/contactPhone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone 1" />

        <TextView
            android:id="@+id/contactPhone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone 2"
            android:visibility="gone" /> <!-- Show this if a second phone number exists -->

        <!-- Contact Address -->
        <TextView
            android:id="@+id/contactAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#757575"
            android:visibility="gone" /> <!-- Show this if address exists -->

        <!-- Actions (Edit, Delete) -->
        <LinearLayout
            android:id="@+id/contactActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"> <!-- Show this if editable or deletable -->

            <Button
                android:id="@+id/buttonEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#6200EE" /> <!-- Customize button appearance -->

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:backgroundTint="#FF4081" /> <!-- Customize button appearance -->

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
